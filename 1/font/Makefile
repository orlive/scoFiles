CC=cc
CFLAGS=-DNDEBUG

LIBS =	-lcurses

PROGS = \
		f\
		r

make:
	@make $(PROGS)

#==============================================================================#

F_OBJ = \
		f.o

f: $(F_OBJ)
	$(CC) $(CFLAGS) -o f $(F_OBJ) $(LIBS)

#==============================================================================#

R_OBJ = \
		r.o

r: $(R_OBJ)
	$(CC) $(CFLAGS) -o r $(R_OBJ)  -lc

#==============================================================================#
